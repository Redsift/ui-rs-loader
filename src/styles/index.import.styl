setup-loader($customSettings = {}) {

  /*
   * Default settings:
   */
  // $defaultSettings = {
  // }

  // $settings = merge($defaultSettings, $customSettings);

  .loader-opts {
    width: 75px;
    padding: 0;
  }
  .fade-0 {
    animation: fade 0.23s ease-in -0.1s;
    animation-fill-mode: both;
  }
  .build-0 {
    animation: build 0.23s ease-out -0.1s;
    animation-fill-mode: both;
  }
  .fade-1 {
    animation: fade 0.23s ease-in 0.13s;
    animation-fill-mode: both;
  }
  .build-1 {
    animation: build 0.23s ease-out 0.13s;
    animation-fill-mode: both;
  }
  .fade-2 {
    animation: fade 0.23s ease-in 0.36s;
    animation-fill-mode: both;
  }
  .build-2 {
    animation: build 0.23s ease-out 0.36s;
    animation-fill-mode: both;
  }
  .fade-3 {
    animation: fade 0.23s ease-in 0.59s;
    animation-fill-mode: both;
  }
  .build-3 {
    animation: build 0.23s ease-out 0.59s;
    animation-fill-mode: both;
  }
  @keyframes fade {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
  @keyframes build {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
}
